{{>NavBar}}
<section class="signup">
  {{>alerts}}
  <div class="row">
    <div class="col s12 m12 l4 offset-l4">
      <div class="card ">
        <div class="card-content">
          <h4 class="card-title center-align">Înregistrare</h4>
          <form method="post" action="/signup/jobseeker">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input type="email" id="email" class="validate" placeholder="Email" name="email" />
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m6">
                <i class="material-icons prefix">person</i>
                <input type="text" id="firstname" class="validate" placeholder="Nume" name="first_name" />
              </div>
              <div class="input-field col s12 m6">
                <i class="material-icons prefix">person</i>
                <input type="text" id="lastname" class="validate" placeholder="Numele de familie" name="last_name" />
              </div>

            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <input type="password" id="password" class="validate" placeholder="Parola" name="password" />
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <input type="password" id="password" class="validate" placeholder=" Confirma Parola" name="confirm_password" />
              </div>
            </div>
            <p>
              <label>
                <input type="checkbox" name="terms_conditions" value="agreed" checked="agreed" />
                <span>Am facut cunostinta si sunt deacord cu <a href="#" class="hover-underline">termenii și condițiile site-ului</a></span>
              </label>
            </p>
            <div class="g-recaptcha" data-sitekey="{{RECAPTCHA_DSKEY}}"></div>
            <div class="row">
              <button class="btn signup-btn btn-large waves-effect waves-light " type="submit" name="action">CONTINUA
              </button>
            </div>
          </form>
          <p>Ai deja un cont ? <a href="/login" class="hover-underline">INTRA</a></p>
        </div>
      </div>
    </div>
  </div>
</section>

{{>Footer}}
{{>FooterCopyRight}}