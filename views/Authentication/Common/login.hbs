{{>NavBar}}

<section class="login">
  {{#if error_msg}} 
          <div class="row" id="alert_box">
            <div class="container">
              <div class="card red darken-1">
                <div class="row">
                  <div class="col s12 m10">
                    <div class="card-content white-text ">
                    {{#each error_msg}}
                          <p>{{msg}}</p>
                    {{/each}}
                  </div>
                  </div>
                  <div class="col s12 m2">
                    <i class="material-icons close_icon_style " id="alert_close">close</i>                            
                </div>
              </div>
            </div>
            </div>
          </div>
      {{/if}}
      <div class="row">
            <div class="col s12 l4 offset-l4">
              <div class="card ">
                <div class="card-content">
                  <h4 class="card-title center-align">Intra</h4>
                  <form method="post" action="/login">
                      <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">email</i>
                            <input type="email" id="email" class="validate" placeholder="Email" name="username" />
                        </div>
                        </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        <input type="password" id="password" class="validate" placeholder="Parola" name="password"/>
                      </div>
                    </div>
                    <a class="login-forgot-password" href="">Ai uitat parola ?</a>
                    <p>
                        <label>
                            <input type="checkbox" />
                            <span>Tine minte</span>
                        </label>
                      </p>
                    <br>
                    <div class="row">
                      <button class="btn  login-btn btn-large waves-effect waves-light " type="submit" name="action">Intra
                      </button>
                    </div>
                  </form> 
                  <p>
                    Nu aveți cont? <a href="/signup">Înregistrare</a></p>
              </div>
            </div>
          </div> 
      </div>
    </section>

{{>Footer}}