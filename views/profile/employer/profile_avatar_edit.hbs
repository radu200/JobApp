

  {{>SimpleNavBar}}
      {{#if error_msg}} 
          <div class="row" id="alert_box">
            <div class="container">
              <div class="card red darken-1">
                <div class="row">
                  <div class="col s12 m10">
                    <div class="card-content white-text ">
                    {{#each error_msg}}
                          <p>{{msg}}</p>
                    {{/each}}
                  </div>
                  </div>
                  <div class="col s12 m2">
                    <i class="material-icons close_icon_style " id="alert_close">close</i>                            
                </div>
              </div>
            </div>
            </div>
          </div>
      {{/if}}
 <div class="container">
      <div class="row">
        <form id="profile_avatar_form" method="POST"  data_avatar_id="{{result.id}}">
          <h4>Schimba imaginea</h4> <!--obligatoriu-->
            <p class="job_image_edit_error error"></p>                                 
                   <!--image upload-->
                        <div class="progress">
                          <div class="determinate "id="progressBarAavatar" value="0" max="100" style="width: 0%"></div>
                          <span class="sr-only"></span>
                        </div>
                              <div class="col s12 m12">
                              <h4>Adauga imagine</h4>

                              <div class="file-field input-field">
