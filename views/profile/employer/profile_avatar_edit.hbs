                                      <span>  Incarca imagine</span>
                                      <input  type="file" id="profile_avatar" name="profile_avatar" accept=".jpeg, .jpg, .png" >
                                  </div>
                              <div class="file-path-wrapper">
                                  <input class="file-path " type="text" placeholder=" Incarca imagine">
                              </div>
                          </div>
                      </div>  

                <button type="submit"  class="btn blue right">Posteaza<i class="material-icons right">send</i></button>
             <div id="statusd"></div>
