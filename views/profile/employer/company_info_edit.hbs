{{>NavBarEmployer}}

  {{#if error_msg}} 
          <div class="row" id="alert_box">
            <div class="container">
              <div class="card red darken-1">
                <div class="row">
                  <div class="col s12 m10">
                    <div class="card-content white-text ">
                    {{#each error_msg}}
                          <p>{{msg}}</p>
                    {{/each}}
                  </div>
                  </div>
                  <div class="col s12 m2">
                    <i class="material-icons close_icon_style " id="alert_close">close</i>                            
                </div>
              </div>
            </div>
            </div>
          </div>
      {{/if}}

      <div class="row">
            <div class="col s12 l4 offset-l4">
              <div class="card ">
                <div class="card-content">
                  <h4 class="card-title center-align">Editeaza Informatia despre companie</h4>
                  <form method="post" action="/company/info/edit/{{result.id}}">
                      <div class="row">
                        <div class="input-field col s12">
                            <input type="text"   placeholder="Numele " name="company_name" value="{{result.company_name}}" />
                        </div>
                     </div>
                        <div class="row">
                            <div class="col s12 m12">
                                <p class="company_description_error error"></p>
                                <div class="input-field">
                                <textarea id="company_description" class="materialize-textarea"  data-length="250" placeholder="ex.Descriere.Te rog nu inlude numere" name="company_description"  maxlength="250" pattern="[a-zA-Z]*" >{{result.company_description}}</textarea>
                                    <span for="company_description"></span>
                                </div>
                            </div>
                        </div>
                {{#if result.company_location}}
                <div class="row">
                  <div class="input-field">
                            <select  name="company_location" id="company_location">
                                <option value="{{result.location}}" selected>{{result.company_location}}</option>
                                <option value="Chisinau">Chisinau</option>
                                <option value="Balti">Balti</option>
                            </select>
                        </div>
                    </div>
                 {{else}}
                <div class="row">
                  <div class="input-field">
                            <select  name="company_location" id="company_location">
                                <option selected value="">Alege locatia unde se afla compania</option>
                                <option  value="Chisinau">Chisinau</option>
                                <option value="Balti">Balti</option>
                            </select>
                        </div>
                    </div>
                 {{/if}}
                    <div class="row">
                        <button class="btn  full-width-btn blue btn-large waves-effect waves-light " type="submit" >Posteaza
                        </button>
                    </div>
                  </form> 
              </div>
              </div>
            </div>
          </div> 
     