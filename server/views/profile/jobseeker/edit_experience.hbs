{{>MainNavBar}}
{{>alerts}}
<div class="container">
  <div class="row">
    <form id="employee_edit_experience" method="POST" action="/api/jobseeker/experience/edit/{{result.id}}">
      <!--employee personal info --->
      <h5 class="center"><b>Editeaza Experienta</b></h5>
      <div class="col s12 m12 l12">
        <h6> <b>Categoria </b></h6>
        <p class="categoryExperience-error error"></p>
        <div class="input-field">
          <select class="categoryExperience" name="categoryExperience">
            <option value="{{result.category}}" selected>{{result.category}}</option>
            <option value="Barista si Barman">Barista Barman</option>
            <option value="Frumuseţe si Bunastare">Frumuseţe si Bunastare</option>
            <option value="Îngrijitorii și sănătatea">Îngrijitorii și sănătatea</option>
            <option value="Bucatar">Bucatar</option>
            <option value="Curățenie">Curățenie</option>
            <option value="Constructie">Constructie</option>
            <option value="Sofer">Sofer</option>
            <option value="Tehnologie si Inginerie">Tehnologie si Inginerie</option>
            <option value="Educaţie">Educaţie</option>
            <option value="Evenimente și promovare">Evenimente și promovare</option>
            <option value="Bucătărie portar ">Bucătărie portar </option>
            <option value="Oficiu si Administratre">Oficiu si Administratre</option>
            <option value="Vanzari si Marketing">Vanzari si Marketing</option>
            <option value="Ospătar sau servitoare">Ospătar sau servitoare</option>
            <option value="Depozit">Depozit</option>
          </select>
        </div>
      </div>

      <div class="col s12 m12 l12">
        <h6> <b>Pozitia dvs.</b></h6>
        <div class="input-field">
          <input type="text" placeholder="Pozitia dvs." value="{{result.position}}" name="position" minlength="0"
            maxlength="70" oninvalid="this.setCustomValidity('Câmpul este necesar')" oninput="setCustomValidity('')"
            required>
        </div>
      </div>
      <div class="col s12 m12 l12">
        <h6> <b>Numele Companiei</b></h6>
        <div class="input-field">
          <input type="text" placeholder="Numele companiei" value="{{result.company_name}}" name="companyName"
            maxlength="70" minlength="0" oninvalid="this.setCustomValidity('Câmpul este necesar')"
            oninput="setCustomValidity('')" required>
        </div>
      </div>
      <div class="col s12 m6 l6">
        <p><b>De La</b></p>
        <div class="input-field">
          <input type="text" placeholder="Alege data" value="{{result.start_date}}" class="datepicker startDate"
            name="startDate">
          <p class="startDateError error"></p>
        </div>
      </div>

      <div class="col s12 m6 l6">
        <p><b>Pina La</b></p>
        <div class="input-field">
          <input type="text" placeholder="Alege data" value="{{result.end_date}}" class="datepicker endDate"
            name="endDate">
          <p class="endDateError error"></p>
        </div>
      </div>
      <!--about me -->
      <h5 class="center"><b>Principalele responsabilități</b>
        <p class="text-opacity">(optional)</p>
      </h5>
      <div class="col s12 m12">
        <div class="input-field">
          <textarea id="mainResponsibilities" class="textarea-style" data-length="250" rows="5" cols="33"
            placeholder="De exemplu,am fost responsabil pentru deschiderea și închiderea barului, pentru a face cocktail-uri, pentru a servi clienții și pentru a opera"
            name="responsibilities" maxlength="250">{{result.responsibilities}}</textarea>
          <span for="description"></span>
        </div>
      </div>

      <button type="submit" class="btn blue right ">Posteaza<i class="material-icons right">send</i></button>
    </form>
    <form method="POST" action="/api/jobseeker/experience/delete/{{result.id}}?_method=DELETE">
      <button class="btn  " type='submit' value='delete'>Sterge</button>
    </form>
  </div>
  <!--row ends-->
</div>