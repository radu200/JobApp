<div class="container">
    <div class="row">
        <form id="employee_info_form" method="POST" action="/profile-edit/jobseeker">

            <!--employee personal info --->
            <h5 class="center"><b>Informatia personala</b> <span class="red-text text-darken-2">*</span></h5>

            <div class="col s12 m6 l6">
                <div class="input-field">
                    <input type="text" placeholder="Prenumele" maxlength="50" name="firstName">
                </div>
            </div>
            <div class="col s12 m6 l6">
                <div class="input-field">
                    <input type="text" placeholder="Numele de familie" maxlength="50" name="lastName">
                </div>
            </div>

            <div class="col s12 m12 l12">
                <h6> <b>Care este disponibilitatea dvs. actuală ? </b><span class="red-text text-darken-2">*</span></h6>
                <p class="city-error error"></p>
                <div class="input-field">
                    <select name="availability-employee" id="availability-employee">
                        <option value="Sunt disponibil pentru începerea imediată" selected>Sunt disponibil pentru începerea imediată</option>
                        <option value="Sunt disponibil, dar nu imediat">Sunt disponibil, dar nu imediat</option>
                        <option value="Nu sunt disponibil pentru oferte"> Nu sunt disponibil pentru oferte</option>
                    </select>
                </div>
            </div>
            <div class="col s12 m12 l12">
                <h6 class="text-opacity">Tipuri de angajare <span class="red-text text-darken-2"></span></h6>
                <p class="city-error error"></p>
                <div class="input-field">
                    <select name="employement-type">
                        <option value="Timp deplin" selected>Timp deplin</option>
                        <option value="Cu jumătate de normă">Cu jumătate de normă</option>
                        <option value="Temporar"> Temporar</option>
                        <option value="Freelance">Freelance</option>
                        <option value="Contract">Contract</option>
                    </select>
                </div>
            </div>
              <div class="col s12 m12 l12">
                <h6> <b>Unde este locatia  dvs. la moment ? </b><span class="red-text text-darken-2"></span></h6>
                <div class="input-field">
                    <input type="text" placeholder="Locatia dvs." maxlength="70" name="employee_location">
                </div>
            </div>

            <!--employee contact info  -->
            <h5 class="center"><b>Informatia de contact</b> <span class="red-text text-darken-2">*</span></h5>
             <div class="col s12 m6 l6">
                <div class="input-field">
                    <input type="email" placeholder="Email" maxlength="100" name="employeeEmail">
                </div>
            </div>
            <div class="col s12 m6 l6">
                <div class="input-field">
                    <input type="number" placeholder="Numarul de telefon"  data-length="15"  maxlength="15" name="phoneNumber">
                </div>
            </div>
               <!--about me -->
            <h5 class="center"><b>Despre Mine</b> <span class="red-text text-darken-2">*</span></h5>
            <div class="col s12 m12">
                <div class="input-field">
                    <textarea id="description" class="materialize-textarea" data-length="240" placeholder="Despre mine."
                        name="employee_description" maxlength="240"></textarea>
                    <span for="description"></span>
                </div>
            </div>
            <div class="col s12 m12">
                <h6><b>Limbi Vorbite</b></h6>
                <div class="input-field">
                    <select id="language" name="language" multiple>
                        <option value="" disabled select>Selecteaza Limba</option>
                         <option value="Romana">Romana</option>
                        <option value="Engleza">Engleza</option>
                        <option value="Spaniola">Spaniola</option>
                        <option value="Germana">Germana</option>
                        <option value="Rusa">Rusa</option>
                    </select>
                </div>
            </div>
            
            <h5 class="center"><b>Educatie</b> <span class="red-text text-darken-2">*</span></h5>
            <div class="col s12 m12">
                <div class="input-field">
                    <textarea id="education" class="materialize-textarea" data-length="240" placeholder="Educatie."
                        name="employee_education" maxlength="240"></textarea>
                    <span for="description"></span>
                </div>
            </div>
            <button type="submit" class="btn blue right full-width-btn">Posteaza<i class="material-icons right">send</i></button>

        </form>
    </div>
    <!--row ends-->
</div>