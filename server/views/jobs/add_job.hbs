{{>MainNavBar}}
{{>alerts}}
<div class="container">
  <div class="job-add-wrapper">
    <div class="row">
      <form id="job_add_form" method="POST" action="/api/jobs/add" enctype="multipart/form-data">
        <div class="col s12 m12">
          <h4>Categoria jobului <span class="red-text text-darken-2">*</span> </h4>
          <p class="category-error error"></p>
        </div>
        <div class="col s12 m6">
          {{>categories}}
          <hr>
        </div>

        <!--job description-->
        <div class="col s12 m12">
          <h4>Descriere job <span class="red-text text-darken-2">*</span></h4>
          <p class="position-error error"></p>
          <div class="input-field">
            <input id="position" type="text" placeholder="Pozitie." data-length="70" maxlength="70" name="position">
          </div>
        </div>

        <div class="col s12 m12">
          <p class="description-error error"></p>
          <div class="input-field">
            <textarea id="description" class="materialize-textarea" data-length="300" placeholder="ex.Descriere."
              name="job_description" maxlength="300"></textarea>
            <span for="description"></span>
          </div>
        </div>

        <div class="col m12">
          <h4>Unde este localizat jobul ? <span class="red-text text-darken-2">*</span></h4>
          <p class="city-error error"></p>
          <!--select city-->
          <div class="input-field">
            <select name="city" id="city">
              {{>locations}}
            </select>
          </div>
        </div>

        <div class="col s12 m12">
          <h4>Tipul de angajare <span class="red-text text-darken-2">*</span></h4>
          <p class="employement_type-error error"></p>
          <label>
            <input class="with-gap validate" type="radio" value="Timp deplin" name="employment_type" />
            <span>Timp deplin</span>
          </label>
          <br>
          <label>
            <input class="with-gap " type="radio" value="Cu jumătate de normă" name="employment_type" />
            <span>Cu jumătate de normă</span>
          </label>
        </div>

        <div class="col s12 m12 start_time ">
          <label>
            <input type="checkbox" value="Începeți imediat" name="immediate_start" />
            <span>Începeți imediat (optional)</span>
          </label>
        </div>

        <div class="col s12 m12">
          <div class="input-field">
            <span>SalariuL Lunar (optional)</span>
            <input type="number" placeholder="SalariuL lunar" name="salary" id="salary">
          </div>
          <div class="error-salary error"></div>
        </div>

        <!--additional information-->
        <div class="col m12">
          <h4>Detalii Suplimentare</h4>
          <p class="experience-error error"></p>
          <span>Acest rol necesită experiență? <span class="red-text text-darken-2">*</span></span>
          <br>
          <label>
            <input class="with-gap" type="radio" value="experiență necesara" name="experience" />
            <span>Da trebuie</span>
          </label>
          <br>
          <label>
            <input class="with-gap" type="radio" value="Fără experiență" name="experience" />
            <span>Nu trebuie </span>
          </label>
          <br>
        </div>
        <div class="col s12 m12">
          <p>Sunt necesare anumite competențe lingvistice ? (optional)</p>
          <div class="input-field">
            <select id="language" name="language" multiple>
              <option value="" disabled select>Selecteaza Limba</option>
              {{>languages}}
            </select>
          </div>
        </div>
        <!--image upload-->
        <div class="col s12 m12">
          <h4>Adauga imagine (optional)</h4>
          <div class="file-field input-field">
            <div class="btn blue ">
              <span> Incarca imagine</span>
              <input type="file" id="job_image" name="job_image" accept=".jpeg, .jpg, .png">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path " type="text" placeholder=" Incarca imagine">
            </div>
          </div>
        </div>
        <button type="submit" class="btn blue right">Adauga</button>
      </form>
    </div>
    <!--row ends-->
  </div>
  <!--container-->
</div>